@{
    ViewData["Title"] = "Panel Administrativo";
}

<h2 style="text-align:center; margin-top:50px; font-family:'Poppins',sans-serif; color:#ff69b4;">
    Panel Administrativo - Oh My Nails 💅
</h2>

<ul style="list-style:none; text-align:center; margin-top:25px; padding:0;">
    <li>
        <a href="/Admin/Citas"
           style="
               display:inline-block;
               text-decoration:none;
               background-color:#ff69b4;
               color:white;
               padding:12px 30px;
               border-radius:30px;
               font-weight:600;
               font-family:'Poppins',sans-serif;
               transition:0.3s;
               box-shadow:0 4px 10px rgba(255,105,180,0.4);
           "
           onmouseover="this.style.backgroundColor='#ff85c1'; this.style.transform='scale(1.05)'; this.style.boxShadow='0 6px 14px rgba(255,133,193,0.6)';"
           onmouseout="this.style.backgroundColor='#ff69b4'; this.style.transform='scale(1)'; this.style.boxShadow='0 4px 10px rgba(255,105,180,0.4)';">
            📅 Administrar Citas
        </a>
    </li>
</ul>
