@model List<OhMyNails.Models.CitaViewModel>

@{
    ViewData["Title"] = "Citas";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">📅 Gestión de Citas</h2>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-info text-center">@TempData["Mensaje"]</div>
    }

    <table class="table table-bordered text-center" style="background-color: #f9c9d5;">
        <thead style="background-color: #f4a4b5; color: white;">
            <tr>
                <th>Cliente</th>
                <th>Teléfono</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Categoría</th>
                <th>Imagen</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cita in Model)
            {
                bool citaPasada = cita.Fecha < DateTime.Today ||
                (cita.Fecha == DateTime.Today && TimeSpan.Parse(cita.Hora) < DateTime.Now.TimeOfDay);
                bool citaCancelada = cita.Estado?.ToLower() == "cancelada";

                <tr style="background-color:@(citaCancelada ? "#e9b7b7" : "#f7cfe2")">
                    <td>@cita.Nombre</td>
                    <td>@cita.Telefono</td>
                    <td>@cita.Fecha.ToShortDateString()</td>
                    <td>@cita.Hora</td>
                    <td>@cita.Categoria</td>
                    <td>
                        @if (!string.IsNullOrEmpty(cita.ImagenReferencia))
                        {
                            <img src="@cita.ImagenReferencia" alt="Referencia" width="70" height="70" style="border-radius:10px;">
                        }
                        else
                        {
                            <span>—</span>
                        }
                    </td>
                    <td>
                        @if (cita.Estado == "Activa")
                        {
                            <span class="badge bg-success">Activa</span>
                        }
                        else if (cita.Estado == "Cancelada")
                        {
                            <span class="badge bg-danger">Cancelada</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@cita.Estado</span>
                        }
                    </td>
                    <td>
                        @if (cita.Estado == "Activa")
                        {
                            <form asp-action="CancelarCita" asp-controller="Admin" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@cita.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    ❌ Cancelar
                                </button>
                            </form>
                        }
                        else if (citaCancelada || citaPasada)
                        {
                            <form asp-action="EliminarCita" asp-controller="Admin" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@cita.Id" />
                                <button type="submit" class="btn btn-secondary btn-sm">
                                    🗑️ Eliminar
                                </button>
                            </form>
                        }
                        else
                        {
                            <span>—</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (TempData["WhatsAppUrl"] != null)
    {
        <script>
            // 🚀 Redirigir automáticamente a WhatsApp después de cancelar cita
            window.onload = function () {
                window.open("@TempData["WhatsAppUrl"]", "_blank");
            };
        </script>

        <div class="text-center mt-3">
            <a href="@TempData["WhatsAppUrl"]" target="_blank" class="btn btn-success">📱 Enviar mensaje por WhatsApp</a>
        </div>
    }
</div>
